#!/bin/bash

# Draw a floating terminal
# Inspired by u/f0x52

# Draw a rectangle using slop then read the geometry value
read -r X Y W H < <(slop -f "%x %y %w %h" -b 4 -t 0 -q)

# Depends on font width & height
# I'm using font Roboto mono regular height 9
(( W /= 8 ))
(( H /= 19 ))

# Create a variable to be used for URxvt flag option
g=${W}x${H}+${X}+${Y}

# Launch terminal with custom geometry
urxvt -g $g &
# xfce4-terminal --geometry=$g

exit 0
