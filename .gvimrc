" Set colorscheme:
colorscheme default

" Hide tool bar:
set guioptions-=T

" Default window size:
set columns=75
set lines=25

" Set font:
set guifont=Roboto\ \Mono\ 10

" Hide highlight current line:
set nocursorline

" Hide bottom status bar:
set laststatus=0

" Hide gutter:
set nonumber
set norelativenumber
